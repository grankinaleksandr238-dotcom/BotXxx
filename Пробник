    ])

def chat_top_navigation(order: str, page: int, has_prev: bool, has_next: bool):
    kb = []
    row = []
    if has_prev:
        row.append(InlineKeyboardButton("‚¨ÖÔ∏è", callback_data=f"chat_top_page_{order}_{page-1}"))
    row.append(InlineKeyboardButton(f"{page}", callback_data="noop"))
    if has_next:
        row.append(InlineKeyboardButton("‚û°Ô∏è", callback_data=f"chat_top_page_{order}_{page+1}"))
    kb.append(row)
    kb.append([
        InlineKeyboardButton("üìä –ü–æ –∞–≤—Ç–æ—Ä–∏—Ç–µ—Ç—É", callback_data="chat_top_authority_1"),
        InlineKeyboardButton("üí∞ –ü–æ –¥–æ–±—ã—á–µ", callback_data="chat_top_damage_1"),
        InlineKeyboardButton("‚öîÔ∏è –ü–æ –∫–∏–¥–∫–∞–º", callback_data="chat_top_fights_1")
    ])
    return InlineKeyboardMarkup(inline_keyboard=kb)

def cancel_inline():
    return InlineKeyboardMarkup(inline_keyboard=[
        [InlineKeyboardButton(text="‚ùå –û—Ç–º–µ–Ω–∞", callback_data="cancel_action")]
    ])

def betray_target_keyboard(participants: List[Dict], heist_id: int):
    kb = []
    for p in participants:
        user_id = p['user_id']
        if p.get('username'):
            display_name = f"@{p['username']}"
        elif p.get('first_name'):
            display_name = p['first_name'][:15]
        else:
            display_name = f"ID{user_id}"
        kb.append([InlineKeyboardButton(
            text=f"üë§ {display_name}",
            callback_data=f"betray_target_{heist_id}_{user_id}"
        )])
    kb.append([InlineKeyboardButton("‚ùå –û—Ç–º–µ–Ω–∞", callback_data="betray_cancel")])
    return InlineKeyboardMarkup(inline_keyboard=kb)

# ==================== –ù–ê–í–ò–ì–ê–¶–ò–Ø –ö–û–ú–ê–ù–î –í –ß–ê–¢–ê–• ====================

def chat_commands_keyboard():
    """–ö–ª–∞–≤–∏–∞—Ç—É—Ä–∞ —Å –∫–æ–º–∞–Ω–¥–∞–º–∏, –¥–æ—Å—Ç—É–ø–Ω—ã–º–∏ –≤ —á–∞—Ç–∞—Ö (–ø–æ—è–≤–ª—è–µ—Ç—Å—è –ø—Ä–∏ /help –≤ —á–∞—Ç–µ)"""
    return InlineKeyboardMarkup(inline_keyboard=[
        [InlineKeyboardButton(text="üë§ –ü—Ä–æ—Ñ–∏–ª—å", callback_data="chat_cmd_profile"),
         InlineKeyboardButton(text="üí∞ –ù–∞–ª—ë—Ç", callback_data="chat_cmd_heist")],
        [InlineKeyboardButton(text="üì¶ –ö–æ–Ω—Ç—Ä–∞–±–∞–Ω–¥–∞", callback_data="chat_cmd_smuggle"),
         InlineKeyboardButton(text="üèõ –¢—é—Ä—å–º–∞", callback_data="chat_cmd_jail")],
        [InlineKeyboardButton(text="üèÜ –¢–æ–ø —á–∞—Ç–∞", callback_data="chat_cmd_top"),
         InlineKeyboardButton(text="üéÅ –ü–æ–¥–≥–æ–Ω", callback_data="chat_cmd_gift")],
        [InlineKeyboardButton(text="üìä –ú–æ–π –Ω–∞–ª—ë—Ç", callback_data="chat_cmd_myheist"),
         InlineKeyboardButton(text="üî™ –ö–∏–Ω—É—Ç—å", callback_data="chat_cmd_betray")]
    ])

# ==================== –ù–ê–í–ò–ì–ê–¶–ò–Ø –ö–û–ú–ê–ù–î –í –ß–ê–¢–ê–• ====================

def chat_help_text() -> str:
    return (
        "üìö <b>–ö–æ–º–∞–Ω–¥—ã –≤ —á–∞—Ç–µ:</b>\n\n"
        "‚Ä¢ /mlb_profile ‚Äì —Ç–≤–æ–π –ø—Ä–æ—Ñ–∏–ª—å\n"
        "‚Ä¢ /mlb_heist ‚Äì —Å—Ç–∞—Ç—É—Å —Ç–µ–∫—É—â–µ–≥–æ –Ω–∞–ª—ë—Ç–∞\n"
        "‚Ä¢ /mlb_smuggle ‚Äì –æ—Ç–ø—Ä–∞–≤–∏—Ç—å—Å—è –≤ –∫–æ–Ω—Ç—Ä–∞–±–∞–Ω–¥—É\n"
        "‚Ä¢ /mlb_jail ‚Äì —Å–µ—Å—Ç—å –≤ —Ç—é—Ä—å–º—É\n"
        "‚Ä¢ /mlb_top ‚Äì —Ç–æ–ø —á–∞—Ç–∞\n"
        "‚Ä¢ /betray ‚Äì –∫–∏–Ω—É—Ç—å –ø–æ–¥–µ–ª—å–Ω–∏–∫–∞ (–≤–æ –≤—Ä–µ–º—è —Ä–∞—Å–ø–∏–ª–∞)\n"
        "‚Ä¢ /myheist ‚Äì –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ —Ç–≤–æ—ë–º —É—á–∞—Å—Ç–∏–∏ –≤ –Ω–∞–ª—ë—Ç–µ\n"
        "‚Ä¢ <b>üéÅ –ü–æ–¥–≥–æ–Ω</b> ‚Äì –∫–Ω–æ–ø–∫–∞ –≤ –º–µ–Ω—é (–µ—Å–ª–∏ –≤–∫–ª—é—á–µ–Ω–æ)\n\n"
        "‚è≥ <i>–ì–ª–æ–±–∞–ª—å–Ω—ã–π –∫—É–ª–¥–∞—É–Ω –º–µ–∂–¥—É –¥–µ–π—Å—Ç–≤–∏—è–º–∏ ‚Äì 1 —á–∞—Å.</i>"
    )
# ==================== –ö–û–ù–ï–¶ –ß–ê–°–¢–ò 2 ====================
